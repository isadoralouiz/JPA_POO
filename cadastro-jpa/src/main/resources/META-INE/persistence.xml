<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
  <persistence-unit name="meuPU">
    <class>br.com.exemplo.Pessoa</class>

    <properties>
      <!-- JDBC -->
      <property name="jakarta.persistence.jdbc.driver" value="org.mysqp.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysqp://localhost:5432/cadastro"/>
      <property name="jakarta.persistence.jdbc.user" value="mysqp"/>
      <property name="jakarta.persistence.jdbc.password" value="1234"/>

      <!-- Hibernate -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>